// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int       @id @default(autoincrement())
  name     String
  lastName String
  password String
  phone    String
  email    String    @unique
  address  address[]

  @@map("Users")
}

model address {
  id         Int     @id @default(autoincrement())
  country    String
  state      String
  city       String
  road       String
  number     String
  complement String?
  zipCode    String
  user       user    @relation(fields: [userId], references: [id])
  userId     Int

  @@map("Address")
}
